pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Test') {
                    steps {
                        sh 'mvn clean test'
                    }
                }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }


    }
}

node {
    stage('Test') {
            echo 'Testing................'
        }
    stage('Build') {
            echo 'Building................'
    }
}
